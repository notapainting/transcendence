1 : creer une partie
    game.create
2 : envoyer des invitations
    game.invite
3 : un joueur (guest) accepte l'invitation et rejoind le lobby
    game.join 
4 : l'host et le guest disent qu'il sont ready
    game.ready
5 : le match commence


ENVOI
creer une partie
{
    "type":"game.create"
}

inviter borys dans uen partie
{
    "type":"game.invite",
    "message":"borys",
}


accepter l'invitation de loulou (rejoindre une partie)
{
    "type":"game.join",
    "message":"loulou",
}

quitter le lobby 
{
    "type":"game.quit",
}

kick qqun du lobby 
{
    "type":"game.kick",
    "message":"borys",
}

indiquer qu'on est pret a jouer 
{
    "type":"game.ready",
}

envoie une update de la game
{
    "type":"game.update"
}

creer une tournoie
{
    "type":"tournament.create"
}

inviter borys a uen tournoi
{
    "type":"tournament.invite",
    "message":"borys",
}

rejoindre une tournoie (necessaire d'avoir une invitation prealable)
{
    "type":"tournament.join",
    "message":"borys",
}

kick qqun du tounoie 
{
    "type":"tournament.kick",
    "message":"borys",
}

indiquer qu'on est pret a jouer le tounoie
{
    "type":"tournament.ready",
}


RECOIT
!GAME
une invitation de borys
{
    "type":"game.invite",
    "author":"borys",
}

loulou a rejoinsd le match
{
    "type":"game.join",
    "author":"loulou",
}

loulou est prete a jouer 
{
    "type":"game.ready",
    "author":"loulou",
}

la partie de loulou commence
{
    "type":"game.start",
    "author":"loulou",
}

loulou t'as vire de sa partie
{
    "type":"game.kick",
    "author":"loulou",
}

!TOUNOI
une invitation de borys a un tournoi
{
    "type":"tournament.invite",
    "author":"borys",
}

loulou a rejoinsd le tournoi
{
    "type":"tournament.join",
    "author":"loulou",
}

loulou est prete a jouer le tournoi
{
    "type":"tournament.ready",
    "author":"loulou",
}

la tounoi de loulou commence
{
    "type":"tournament.start",
    "author":"loulou",
}

loulou t'as vire de sa tournoi
{
    "type":"tournament.kick",
    "author":"loulou",
}
